<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/v_extmask"
            android:background="@color/ColorShopDetailsExtMask"
            android:layout_marginTop="150dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.itfitness.fmtshopdetails.widget.scrollablelayout.ScrollableLayout
            android:id="@+id/scrollableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/headerView"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_shopbg"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_shopbg"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />
                    <com.itfitness.fmtshopdetails.widget.ShadowLayout
                        android:id="@+id/sdl_shopinfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="110dp"
                        android:padding="15dp"
                        app:radius="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        app:shadowColor="@color/ColorShopDetailsShadown"
                        app:shadowSize="5dp"
                        >
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textColor="#000"
                                    android:text="贝克汉堡"
                                    android:textSize="20sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <FrameLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:id="@+id/ll_coupons"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <!--优惠券-->
                                    <com.itfitness.fmtshopdetails.widget.FlowLayout
                                        android:id="@+id/fl_coupons"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content">
                                    </com.itfitness.fmtshopdetails.widget.FlowLayout>
                                    <ImageView
                                        android:src="@drawable/ic_down"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp" />
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/ll_coupons_ext"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:text="优惠券"
                                        android:textColor="#000"
                                        android:textSize="15sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_marginTop="5dp"
                                        android:gravity="center_vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <ImageView
                                            android:src="@drawable/ic_counpon_cut"
                                            android:layout_width="18dp"
                                            android:layout_height="18dp" />
                                        <TextView
                                            android:id="@+id/tv_counpons_ext"
                                            android:textColor="#000"
                                            android:layout_marginLeft="5dp"
                                            android:textSize="13sp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />
                                    </LinearLayout>
                                </LinearLayout>
                            </FrameLayout>
                        </LinearLayout>
                        <FrameLayout
                           android:id="@+id/fl_pullback"
                            android:visibility="gone"
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="5dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_up"
                                android:layout_width="20dp"
                                android:layout_height="20dp" />
                        </FrameLayout>
                    </com.itfitness.fmtshopdetails.widget.ShadowLayout>
                    <com.itfitness.fmtshopdetails.widget.ShadowLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:layout_marginTop="90dp"
                        android:layout_marginRight="25dp"
                        app:radius="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="5dp"
                        app:shadowColor="@color/ColorShopDetailsShadown"
                        app:shadowSize="5dp"
                        >
                        <com.itfitness.fmtshopdetails.widget.roundedimage.RoundedImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:riv_corner_radius="5dp"
                            android:src="@drawable/ic_img"
                            app:riv_mutate_background="true"
                            android:scaleType="fitXY"
                            />
                    </com.itfitness.fmtshopdetails.widget.ShadowLayout>
                </RelativeLayout>
            </LinearLayout>
            <net.lucode.hackware.magicindicator.MagicIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            </net.lucode.hackware.magicindicator.MagicIndicator>
            <View
                android:background="#eee"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <android.support.v4.view.ViewPager
                android:id="@+id/vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.itfitness.fmtshopdetails.widget.scrollablelayout.ScrollableLayout>
    </RelativeLayout>
    <include layout="@layout/layout_title"/>
</RelativeLayout>
