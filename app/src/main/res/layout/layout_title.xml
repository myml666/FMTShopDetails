<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_ll_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/title_statusbar"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <View
            android:id="@+id/v_titilebg"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/title_img_back_white"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back_white"
            android:layout_marginLeft="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/title_img_search_white"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_search_white"
            android:layout_marginRight="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <View
            android:id="@+id/v_flag"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/title_img_back_white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/ll_search"
            android:orientation="horizontal"
            android:layout_alignRight="@id/title_img_search_white"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:background="@drawable/shape_search"
            android:layout_width="0dp"
            android:layout_height="33dp">
            <ImageView
                android:id="@+id/img_search"
                android:src="@drawable/ic_search_black"
                android:layout_marginLeft="13dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/tv_search"
                android:textColor="#666"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginLeft="5dp"
                android:text="请输入商品名"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>